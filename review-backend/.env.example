# Database connection string
DATABASE_URL="postgresql://username:password@localhost:5432/reviewit?schema=public"

# JWT Secret for authentication
JWT_SECRET="your-secret-key-for-jwt-tokens"

# CORS Origins
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:5174"

# Next.js Environment
NODE_ENV="development"

# SendGrid Email Configuration
SENDGRID_API_KEY="your-sendgrid-api-key-here"
SENDGRID_FROM_EMAIL="noreply@yourcompany.com"
ADMIN_NOTIFICATION_EMAIL="admin@yourcompany.com"

# Admin Registration
ADMIN_INVITE_CODE="your-secure-invite-code-here"

# Frontend URL for OAuth redirects
FRONTEND_URL="http://localhost:5173"

# Backend URL for OAuth callbacks
BACKEND_URL="http://localhost:3000"

# Google OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# TURN Server Configuration (Coturn)
TURN_STATIC_SECRET="your-coturn-static-secret-here"
TURN_REALM="turn.riviewit.com"
TURN_URL_UDP="turn:turn.riviewit.com:3478?transport=udp"
TURN_URL_TCP="turn:turn.riviewit.com:3478?transport=tcp"
TURN_URL_TLS="turns:turn.riviewit.com:5349?transport=tcp"
